@import "gruvbox-dark.rasi"

* {
    columns: 2;
    scrollbar: false;

    background-color: #22222250;
    selected-normal-background: c3;
    selected-normal-foreground: #ffffff;

    selected-urgent-background: c3;
    selected-urgent-foreground: #ffffff;

    selected-active-background: c3;
    selected-active-foreground: #ffffff;

    normal-foreground: #ffffff;
    alternate-normal-foreground: #ffffff;
    border-radius: 4px;
}

window {
    background-color: #22222250;
    border: 3px;
    border-radius: 18px;
    border-color: c3;
}

listview {
    border: 0;
}

